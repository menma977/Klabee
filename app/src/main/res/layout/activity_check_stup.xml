<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CheckStup">

    <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <FrameLayout
                android:id="@+id/QRCamera"
                android:layout_margin="20dp"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:background="@color/colorPrimaryLight" />

        <androidx.cardview.widget.CardView
                android:id="@+id/CardMenuList"
                app:cardCornerRadius="20dp"
                android:layout_margin="20dp"
                app:cardBackgroundColor="@color/colorPrimaryLight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <GridLayout
                    android:layout_margin="20dp"
                    android:columnCount="2"
                    android:rowCount="6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_column="0"
                        android:layout_row="0"
                        android:text="Agen"
                        android:layout_columnWeight="1"
                        android:textColor="@color/textPrimary"
                        android:textSize="14sp"/>

                <TextView
                        android:id="@+id/Agent"
                        android:gravity="end"
                        android:layout_column="1"
                        android:layout_row="0"
                        android:layout_columnWeight="1"
                        android:textColor="@color/textPrimary"
                        android:textSize="14sp"/>

                <TextView
                        android:layout_column="0"
                        android:layout_row="1"
                        android:text="Nama"
                        android:layout_columnWeight="1"
                        android:textColor="@color/textPrimary"
                        android:textSize="14sp"/>

                <TextView
                        android:id="@+id/Name"
                        android:gravity="end"
                        android:layout_column="1"
                        android:layout_row="1"
                        android:layout_columnWeight="1"
                        android:textColor="@color/textPrimary"
                        android:textSize="14sp"/>

                <TextView
                        android:layout_column="0"
                        android:layout_row="2"
                        android:text="Username"
                        android:layout_columnWeight="1"
                        android:textColor="@color/textPrimary"
                        android:textSize="14sp"/>

                <TextView
                        android:id="@+id/UsernameAgent"
                        android:gravity="end"
                        android:layout_column="1"
                        android:layout_row="2"
                        android:layout_columnWeight="1"
                        android:textColor="@color/textPrimary"
                        android:textSize="14sp"/>

                <TextView
                        android:layout_column="0"
                        android:layout_row="3"
                        android:text="Bulan ke 1"
                        android:layout_columnWeight="1"
                        android:textColor="@color/textPrimary"
                        android:textSize="14sp"/>

                <TextView
                        android:id="@+id/OneStMonth"
                        android:gravity="end"
                        android:layout_column="1"
                        android:layout_row="3"
                        android:layout_columnWeight="1"
                        android:textColor="@color/textPrimary"
                        android:textSize="14sp"/>

                <TextView
                        android:layout_column="0"
                        android:layout_row="4"
                        android:text="Bulan ke 2"
                        android:layout_columnWeight="1"
                        android:textColor="@color/textPrimary"
                        android:textSize="14sp"/>

                <TextView
                        android:id="@+id/TowStMonth"
                        android:gravity="end"
                        android:layout_column="1"
                        android:layout_row="4"
                        android:layout_columnWeight="1"
                        android:textColor="@color/textPrimary"
                        android:textSize="14sp"/>

                <TextView
                        android:layout_column="0"
                        android:layout_row="5"
                        android:text="Bulan ke 3"
                        android:layout_columnWeight="1"
                        android:textColor="@color/textPrimary"
                        android:textSize="14sp"/>

                <TextView
                        android:id="@+id/TreeStMonth"
                        android:gravity="end"
                        android:layout_column="1"
                        android:layout_row="5"
                        android:layout_columnWeight="1"
                        android:textColor="@color/textPrimary"
                        android:textSize="14sp"/>

            </GridLayout>

        </androidx.cardview.widget.CardView>

        <Button
                android:id="@+id/Reset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@color/colorPrimary"
                android:text="Reset"
                android:textColor="@color/textSecondary" />

    </LinearLayout>

</ScrollView>